//                "tmpdir": ["/data/data/mysql"]
//            },
//            "tunable": {
//                "log_error": "/data/logs/mysql/error.log",
//                "long_query_time": 0.5
//            }
        }
    },
    "json_class": "Chef::Role",
    "run_list": [
        "mysql::client",
        "mysql::server"
